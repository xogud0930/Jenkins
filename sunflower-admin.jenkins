pipeline {
    agent { node 'dev-server' }
    stages {
        stage('prepare') {
            steps {
                sh '''#!/bin/bash
                
                echo Date : $TODAY
                echo Branch : ${HOOK_REF#*/}
                echo Commit : $COMMIT_MSG

                MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸŒŸSunflower AdminğŸŒŸ\n$COMMIT_AUTHOR\n20${TODAY:0:2}-${TODAY:2:2}-${TODAY:4:2} ${TODAY:7:2}:${TODAY:9:2}:${TODAY:11:2}\nBranch: ${HOOK_REF#*/}\n============Commit============\n$COMMIT_MSG\n==============================="

                if [[ "$BRANCH" =~ "main" ]]; then
                    cd ~/dev-server
                    node noticeMommoss "24" "$MSG"
                fi
                '''
            }
        }
        stage('deploy') {
            steps {
                sh '''#!/bin/bash
                if [[ "$BRANCH" =~ "main" ]]; then
                    cd ~/sunflower-admin-ts

                    git fetch --all
                    git reset --hard origin/${HOOK_REF#*/}
                    git pull
                    
                    if [ "$COMMIT_ID" != "none" ]; then
                        git checkout $COMMIT_ID
                    fi

                    yarn
                    echo "git pull ok"

                    yarn run build
                    cp -f -r ./build/* ./../sunflower-prototype/public/
                    echo "bulid ok"
                fi
                '''
            }
        }
        stage('send message') {
            steps {
                sh'''#!/bin/bash
                MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸŒŸSunflower AdminğŸŒŸ\nSunflower admin build successğŸ™†â€â™‚ï¸"

                if [[ "$BRANCH" =~ "main" ]]; then
                    cd ~/dev-server
                    node noticeMommoss.js "24" "$MSG"
                fi
                '''
            }
        }
    }
    post {
        failure {
            sh'''#!/bin/bash
            echo "build failed"
            MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸŒŸSunflower AdminğŸŒŸ\nSunflower admin jenkins failedâŒ"
            cd ~/dev-server
            node noticeMommoss.js "24" "$MSG"
            '''
        }
        aborted {
            sh'''#!/bin/bash
            echo "build aborted"
            MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸŒŸSunflower AdminğŸŒŸ\nSunflower admin jenkins abortedâ›”"
            cd ~/dev-server
            node noticeMommoss.js "24" "$MSG"
            '''
        }
    }
}