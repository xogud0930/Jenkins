pipeline {
    agent { node 'dev-server' }
    stages {
        stage('prepare') {
            steps {
                sh '''#!/bin/bash
                
                echo Date : $TODAY
                echo Branch : ${HOOK_REF#*/}
                echo Commit : $COMMIT_MSG

                MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸ€Mommoss Dev ServerğŸ€\n$COMMIT_AUTHOR\n20${TODAY:0:2}-${TODAY:2:2}-${TODAY:4:2} ${TODAY:7:2}:${TODAY:9:2}:${TODAY:11:2}\nBranch: ${HOOK_REF#*/}\n============Commit============\n$COMMIT_MSG\n==============================="
                cd ~/dev-server
                node noticeMommoss "24" "$MSG"
                '''
            }
        }
        stage('deploy') {
            steps {
                sh '''#!/bin/bash
                if [[ "$BRANCH" =~ "dev" ]]; then
                    cd ~/mommoss-api-server-ts

                    git fetch --all
                    git reset --hard origin/${HOOK_REF#*/}
                    git pull
                    
                    if [ "$COMMIT_ID" != "none" ]; then
                        git checkout $COMMIT_ID
                    fi

                    npm i

                    JENKINS_NODE_COOKIE=dontKillMe
                    
                    pm2 reload dev-server
                    
                    echo "git pull ok"
                else
                    echo "not master branch"
                fi
                '''
            }
        }
        stage('send message') {
            steps {
                sh'''#!/bin/bash
                MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸ€Mommoss Dev ServerğŸ€\nMommoss dev Server deploy successğŸ™†â€â™‚ï¸\nServer is restarting."
                cd ~/dev-server
                node noticeMommoss.js "24" "$MSG"
                '''
            }
        }
    }
    post {
        failure {
            sh'''#!/bin/bash
            echo "build failed"
            MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸ€Mommoss Dev ServerğŸ€\nMommoss dev server jenkins failedâŒ"
            cd ~/dev-server
            node noticeMommoss.js "24" "$MSG"
            '''
        }
        aborted {
            sh'''#!/bin/bash
            echo "build aborted"
            MSG="ğŸ’¡[Jenkins]ğŸ’¡\nğŸ€Mommoss Dev ServerğŸ€\nMommoss dev server jenkins abortedâ›”"
            cd ~/dev-server
            node noticeMommoss.js "24" "$MSG"
            '''
        }
    }
}